<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="2dp"
    android:outlineAmbientShadowColor="@color/endGreenColor"
    android:outlineSpotShadowColor="@color/endGreenColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#5734E0F6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_location"
            android:textSize="30sp"
            android:textColor="@color/endGreenColor"
            android:textStyle="bold"
            android:fontFamily="@font/rutype"
            android:layout_margin="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/do_you_want_to_continue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="6dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/black" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cansel"
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:layout_margin="16dp"
                android:textColor="@color/white"
                android:text="@string/cansel"
                android:textSize="16sp"
                android:background="@drawable/green_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_yes"
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:layout_margin="16dp"
                android:textColor="@color/white"
                android:text="@string/yes"
                android:textSize="17sp"
                android:background="@drawable/green_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_cansel"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>